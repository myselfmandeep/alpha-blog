<h1>Create an article </h1>
<%= form_for @article do |f| %>
  <%# title %>
  <p>
    <%= f.label :title  %> <br>
    <%= f.text_field :title %>
  </p>
  <%# description %>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <%# submit %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
